<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ruoyi.mapper.CweClusterMappingMapper">

    <resultMap id="CweClusterMappingResult" type="org.ruoyi.domain.CweClusterMapping">
        <id property="id" column="id"/>
        <result property="cweId" column="cwe_id"/>
        <result property="clusterId" column="cluster_id"/>
        <result property="clusterMethod" column="cluster_method"/>
        <result property="distanceToCenter" column="distance_to_center"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="tenantId" column="tenant_id"/>
    </resultMap>

    <resultMap id="CweClusterMappingVoResult" type="org.ruoyi.domain.vo.CweClusterMappingVo">
        <id property="id" column="id"/>
        <result property="cweId" column="cwe_id"/>
        <result property="clusterId" column="cluster_id"/>
        <result property="clusterMethod" column="cluster_method"/>
        <result property="distanceToCenter" column="distance_to_center"/>
    </resultMap>

    <select id="selectByCweId" resultMap="CweClusterMappingVoResult">
        SELECT id, cwe_id, cluster_id, cluster_method, distance_to_center
        FROM cwe_cluster_mapping
        WHERE cwe_id = #{cweId}
        ORDER BY cluster_id ASC
    </select>

    <select id="selectByClusterIdAndMethod" resultMap="CweClusterMappingVoResult">
        SELECT id, cwe_id, cluster_id, cluster_method, distance_to_center
        FROM cwe_cluster_mapping
        WHERE cluster_id = #{clusterId} AND cluster_method = #{clusterMethod}
        ORDER BY distance_to_center ASC, cwe_id ASC
    </select>

</mapper>
